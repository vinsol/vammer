<div class='col-lg-offset-1 col-lg-7'>

  <% @hashtagged.each do |post| %>
    <div class='post-division fill'>
      <div class='add-margin'>

        <% if post.user.image %>
          <%= image_tag(post.user.image.attachment.url(:thumb)) %>
        <% end %>

      <span class='name-bold'>
        <%= post.user.name.capitalize %>
      </span>

        <br><br>

        <%= linkify_mentions(linkify_hashtags(post.content)) %>

        <% post.post_documents.each do |document| %>

          <div class='attachment comment-margin'>

            <%= link_to document.attachment_file_name, document.attachment.url %>

            <% if can_edit_user?(post.user) %>
              <%= link_to image_tag('delete.png'), attachment_path(document), method: :delete, remote: true, class: 'delete-attachment' %>
            <% end %>

          </div>

        <% end %>

        <br>
        <%= link_to_like_unlike post, :post %>
        <span class='count'>
          <%= post.likes.count %>
        </span>


        <% if can_edit_user?(post.user) %>

          <%= link_to image_tag('delete.png'), post_path(post.id), method: :delete, class: 'delete-post' %>

        <% end %>

      </div>

      <%= render 'home/show_comments', post: post %>

      <% if( !post.group || current_user.groups.include?(post.group) || current_user.admin? ) %>

        <%= render 'shared/post_comment_form', post: post %>

      <% end %>

    </div>

  <% end %>

  <br>

</div>
