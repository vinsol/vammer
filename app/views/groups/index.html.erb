<div class='dashboard-body'>
  <ul class='nav nav-tabs'>
    <li>
      <%= link_to 'My groups', :groups %>
    </li>
    <li>
      <%= link_to 'Other groups', :other_groups %>
    </li>
    <li>
      <%= link_to 'Owned groups', :owned_groups %>
    </li>
  </ul>
  <div>
    <table class="table table-striped table-hover ">
      <tr>
        <th>Name
          <%= link_to_by_order :name %>
        </th>
        <th>Description</th>
          <% if not_owned? %>
            <th>Creator
                <%= link_to_by_order :creator %>
            </th>
          <% end %>
        <th>Action</th>
      </tr>
      <% @groups.each do |group| %>
        <tr>
          <td> <%= group.name %>
           </td>
          <td> <%= group.description.truncate(25) %> </td>
          <% if not_owned? %>
            <td> <%= group.creator.name %> </td>
          <% end %>
          <td>
            <%= link_to 'view' %>
            <%= group_action_link(group) %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= paginate @groups %>
  </div>
</div>
<div class='dashboard-sidebar'>
  <%= render 'group_list' %>
</div>