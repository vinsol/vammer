<ul class='nav nav-tabs'>
  <li>
    <%= link_to 'My groups', :groups %>
  </li>
  <li>
    <%= link_to 'Other groups', :groups_other %>
  </li>
  <li>
    <%= link_to 'Owned groups', :groups_owned %>
  </li>
</ul>
<div class='col-lg-8 col-lg-offset-2'>
  <table class="table table-striped table-hover ">
    <tr>
      <th>Name
        <%= link_to_by_order :name %>
      </th>
      <th>Descrition</th>
      <th>Creator
        <%= link_to_by_order :creator %>
      </th>
      <th>Action</th>
    </tr>
    <% @groups.each do |group| %>
      <tr>
        <td> <%= group.name %>
          <%= group.id %>
         </td>
        <td> <%= group.description %> </td>
        <td> <%= group.creator.name %> </td>
        <td>
          <%= link_to 'view' %>
          <%= group_action_link(group) %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate @groups %>
</div>