<div class='dashboard-body'>

  <ul class='nav nav-tabs'>
    <li> <%= link_to 'My groups', :groups %> </li>
    <li> <%= link_to 'Other groups', :extraneous_groups %> </li>
    <li> <%= link_to 'Owned groups', :owned_groups %> </li>
  </ul>

  <div>
    <table class="table table-striped table-hover ">

      <tr>
        <th>Name
          <%= link_to_by_order :name %>
        </th>
        <th>Description</th>

          <% if action != :owned %>
            <th>Creator
                <%= link_to_by_order :creator %>
            </th>
          <% end %>

        <th>Action</th>
      </tr>

      <% @groups.each do |group| %>

        <tr>
          <td> <%= group.name %> </td>
          <td> <%= group.description.truncate(25) %> </td>

          <% if action != :owned %>
            <td> <%= group.creator.name %> </td>
          <% end %>

          <td>
            <%= link_to 'view', group_path(group) %>
            <%= group_join_link(group) %>
            <% if admin_logged_in? or group_owner_logged_in?(group) %>
              <%= link_to :edit, edit_group_path(group) %>
            <% end %>
          </td>

        </tr>

      <% end %>
    </table>
    <%= paginate @groups %>
  </div>
</div>

<div class='dashboard-sidebar'>
  <%= render 'shared/group' %>
</div>
