<!DOCTYPE html>
<html>

  <head>
    <title>Vammer</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <div class='header'>

      <% if @logo %>
        <%= link_to image_tag(@logo.value), :root %>
      <% end %>

      <% if user_signed_in? %>

        <div class='user-name'>
          hi <%= current_user.name %>
        </div>

        <div class='search-header'>
          <%= render 'layouts/search_bar' %>
        </div>

      <% end %>

    </div>

    <div class='container-body'>
      <br>
      <% if flash[:notice] %>
        <div class="control-group alert alert-warning col-lg-offset-4 col-lg-4">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:error] %>
        <div class="control-group alert alert-danger col-lg-offset-4 col-lg-4">
          <%= flash[:error] %>
        </div>
      <% end %>

      <%= yield %>

    </div>
  </body>
</html>
