<!DOCTYPE html>
<html>

  <head>
    <title>Vammer</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>

    <div class='blue-color'>

      <div class='container'>

        <% if user_signed_in? %>

          <div class='search-header'>
            <%= render 'layouts/search_bar' %>
          </div>

        <% end %>

      </div>

      <div class='container-body'>
        <br>
        <!-- #FIX: Fade out flash messages after some time -->
        <% if flash[:notice] %>
          <div class="control-group alert alert-success col-lg-offset-4 col-lg-4">
            <%= flash[:notice] %>
          </div>
          <br><br><br><br>
        <% end %>

        <% if flash[:error] %>
          <div class="control-group alert alert-danger col-lg-offset-4 col-lg-4">
            <%= flash[:error] %>
          </div>
          <br><br><br><br>
        <% end %>
        <% if current_user %>
          <div class='col-md-2'>
            <%= render 'shared/group' %>
          </div>
          <div class='col-md-offset-3 navigation-bar-new'>
            <ul class="nav nav-tabs">
              <li role="presentation" class=<%= 'active' if request.fullpath == '/' %>> <%= link_to 'Home', root_path %> </li>
              <li role="presentation" class=<%= 'active' if request.fullpath == '/groups' %>> <%= link_to 'Group', groups_path %> </li>
              <li role="presentation" class=<%= 'active' if request.fullpath == '/users' %>> <%= link_to 'People', users_path %> </li>
            </ul>
          </div>
        <% end %>

        <%= yield %>

      </div>
    </div>
  </body>
</html>
