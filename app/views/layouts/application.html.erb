<!DOCTYPE html>
<html>
  <head>
    <title>Vammer</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <header class='header'>
      <div class='container'>
        <div class='row'>
          <% if user_signed_in? %>
            <div class='search-header'>
              <%= render 'layouts/search_bar' %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <section class='bodycontainer ovr-hdn mt-20 pb-20'>
      <!-- #FIX: Fade out flash messages after some time -->
      <% if flash[:notice] %>
        <div class="control-group alert alert-success ml-15 mr-15">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:error] %>
        <div class="control-group alert alert-danger ml-15 mr-15">
          <%= flash[:error] %>
        </div>
      <% end %>
      <% if current_user %>
        <aside class='col-md-2 col-sm-3'>
          <%= render 'shared/group' %>
        </aside>
        <article class='navigation-bar-new col-md-6 col-sm-6'>
          <ul class="nav nav-tabs">
            <li role="presentation" class=<%= 'active' if request.fullpath == '/' %> > <small class='fa fa-home'></small><%= link_to 'Home', root_path %> </li>
            <li role="presentation" class=group <%= 'active' if request.fullpath == '/groups' %>><small class='fa fa-group'></small> <%= link_to 'Group', groups_path %> </li>
            <li role="presentation" class=people <%= 'active' if request.fullpath == '/users' %>><small class='fa fa-user'></small> <%= link_to 'People', users_path %> </li>
          </ul>
      <% end %>
      <%= yield %>
    </section>
  </body>
</html>
