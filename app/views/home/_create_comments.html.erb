<div class='col-lg-10'>
  <%= nested_form_for [post, @comment], html: { class: 'form-horizontal col-lg-12'} do |f| %>

    <div class='control-group'>
      <%= f.text_area :content, class: 'form-control' %>
      <%= f.hidden_field :group_id, value: @group.try(:id) %>
    </div>

    <br>

    <div class='control-group'>
      <%= f.fields_for :document_files do |doc| %>
        <%= doc.file_field :attachment %>
        <%= f.link_to_remove 'remove attachment' %>
      <% end %>
    </div>
    <%= f.link_to_add 'Add attachment', :document_files %>

    <div class='control-group col-lg-offset-10'>
      <%= f.submit 'Post', class: 'btn btn-primary' %>
    </div>

  <% end %>
  <br> <br>
</div>
