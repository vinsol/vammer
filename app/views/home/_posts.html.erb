<article>
  <% @posts.each do |post| %>
    <% if post.user.image %>
      <%= image_tag(post.user.image.attachment.url(:thumb)) %>
    <% end %>
    <%= post.user.name %>
    <%= post.content %>
    <% if post.document %>
      <%= link_to 'attachment', post.document.attachment.url %>
    <% end %>
  <% end %>
</article>
