<div class='col-lg-offset-1 col-lg-7'>

  <% @posts.each do |post| %>
    <div class='post-division fill'>
      <div class='add-margin'>

        <% if post.user.image %>
          <%= image_tag(post.user.image.attachment.url(:thumb)) %>
        <% end %>

        <%= post.user.name %>

        <br><br>

        <%= linkify_hashtags(post.content) %>

        <% post.documents.each do |document| %>

          <%= link_to 'attachment', document.attachment.url %>

          <% if can_edit_user?(post.user) %>
            <%= link_to 'destroy attachment', post_attachment_path(post, document), method: :delete %>
          <% end %>

        <% end %>

        <%= link_to_like_unlike post, :post %>

        <div class='count'>
          <%= post.likes.count %>
        </div>


        <% if can_edit_user?(post.user) %>

          <%= link_to 'delete post', post_path(post.id), method: :delete, class: 'delete-post' %>

        <% end %>


        <%= render 'home/show_comments', post: post %>

        <% if(@group ? @group.members.include?(current_user) : true) %>

          <%= render 'shared/create_comments', post: post %>

        <% end %>

        <br> <br> <br> <br>
      </div>
    </div>
  <% end %>

  <br>

</div>
