<!-- Button trigger modal -->

<%= image_tag image.attachment.url, {size: '35x35', 'data-toggle' => 'modal', 'data-target' => '#' + image.id.to_s} %>

<!-- Modal -->
<div class="modal fade" id=<%= image.id %> tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body post-image">
        <button class="close" data-dismiss="modal">X</button>
        <%= image_tag(image.attachment.url, size: '300x300') %>
      </div>
      <div class="modal-footer">
        <a href="<%= image.attachment.url %>" download="<%= image.attachment.name %>"> Download </a>
      </div>
    </div>
  </div>
</div>
