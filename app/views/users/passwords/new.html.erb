<div class="container">
  <div class="col-md-6 col-md-offset-3 vertical-center">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal col-lg-10" }) do |f| %>

      <% if not devise_error_messages!.empty? %>
        <div class=" control-group col-md-offset-3">
          <%= devise_error_messages! %>
        </div>
      <% end %>

      <div class="control-group">
        <%= f.label :email, class: "col-lg-4 control-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <br>

      <div class="control-group col-md-offset-4">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
      </div>
      <%= render "users/shared/links" %>
    <% end %>

  </div>

</div>
