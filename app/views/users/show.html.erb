<div class='container'>
  <div class='col-md-6 col-md-offset-3 vertical-center'>
    <table class='table table-striped table-hover table-bordered center-align'>

      <h2> User details </h2>

      <% User::USER_DETAILS.each do |field| %>
        <tr>
          <td> <%= field.capitalize %> </td>
          <td> <%= @user.public_send(field) %> </td>
        </tr>
      <% end %>

      <td> Attachment </td>

      <td> <%= @user.image ? image_tag(@user.image.attachment.url) : 'No image uploaded' %> </td>

    </table>
  </div>
  <%= render 'shared/posts' %>
</div>
