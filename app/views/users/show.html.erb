<div class='container'>
  <div class='col-md-6 col-md-offset-3 vertical-center'>

    <%= fields_for @user, html: { class: 'form-horizontal col-lg-10'} do |f| %>

      <h2>user details</h2>

      <div class="control-group col-md-offset-4">
        <% @user.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
        <br><br>
      </div>

      <div class='control-group'>

        <%= f.label :name, class: 'col-lg-4 control-label' %>
        <%= f.text_field :name, class: 'form-control', disabled: true %>

      </div><br/>

      <div class='control-group'>

        <%= f.label :about_me, class: 'col-lg-4 control-label' %>
        <%= f.text_area :about_me, class: 'form-control', disabled: true %>

      </div><br/>

      <div class='control-group'>

        <%= f.fields_for :attachment do |attach| %>

          <%= f.label :attachment, class: 'col-lg-4 control-label' %>
          <%= image_tag @user.attachment.attachment %>
          <%= attach.hidden_field :attachment_cache %>

        <% end %>

      </div><br/>

      <div class='control-group'>

        <%= f.label :job_title, class: 'col-lg-4 control-label' %>
        <%= f.text_field :job_title, class: 'form-control', disabled: true %>

      </div><br/>

      <div class='control-group'>

        <%= f.label :email, class: 'col-lg-4 control-label' %>
        <%= f.text_field :email, class: 'form-control', disabled: true %>

      </div><br/>

      <div class='control-group'>

        <%= f.label :date_of_birth, class: 'col-lg-4 control-label' %>
        <%= select_date @user.date_of_birth, class: 'form-control', disabled: true %>
      </div><br/>

      <div class='control-group'>

        <%= f.label :mobile, class: 'col-lg-4 control-label' %>
        <%= f.text_field :mobile, class: 'form-control', disabled: true %>

      </div><br/>

      <div class='control-group'>

        <%= f.label :joining_date, class: 'col-lg-4 control-label' %>
        <%= select_date @user.joining_date, class: 'form-control', disabled: true %>

      </div><br/>

    <% end %>

  </div>
</div>  