<!-- #FIX: Do not use fields for displaying info and image -->
<!-- #FIX: Use static text and images -->
<div class='container'>
  <div class='col-md-6 col-md-offset-3 vertical-center'>
    <table class='table table-striped table-hover table-bordered center-align'>

      <h2> User details </h2>

      <% User::USER_DETAILS.each do |field| %>
        <tr>
          <td> <%= field %> </td>
          <!-- #FIX: Please use #send to get value of a field on an object -->
          <td> <%= @user["#{field}"] %> </td>
        </tr>
      <% end %>

      <!-- #FIX: Will this work if there is no attachment. -->
      <td> attachment </td>
      <td> <%= image_tag(@user.attachment.attachment.url) %> </td>

    </table>
  </div>
</div>  
