<!-- #NOTE: Please use single-quotes instead of double-quotes for static strings -->
<div class='container'>

  <!-- #NOTE: Use hiphens in class names instead of underscores -->
  <div class='col-md-6 col-md-offset-3 vertical-center'>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal col-lg-10'}) do |f| %>

    <!-- #NOTE- Fix indentation -->

    <h1>
      Log in
    </h1>

    <div class="control-group col-md-offset-4">
      <%= flash[:alert] %>
      <br><br>
    </div>

    <div class='control-group'>

      <!-- #NOTE: Lets keep it 'Email' i.e. default value for label :email -->
      <%= f.label :email, 'Email', class: 'col-lg-4 control-label' %>
      <%= f.email_field :email, class: 'form-control', autofocus: true %>

    </div>
    <br>

    <div class='control-group'>

      <%= f.label :password, class: 'col-lg-4 control-label' %>
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>

    </div>

    <% if devise_mapping.rememberable? -%>
      <!-- #NOTE: Write in one line -->
      <div>
        <%= f.check_box :remember_me%> <%= f.label :remember_me, class: 'col-lg-4 control-label' %>
      </div>

    <% end -%>

    <div>

      <%= f.submit 'Log in', class: 'btn btn-primary' %></div>
      <%= render 'users/shared/links' %>
      <% end %>
      <!-- #NOTE: Extra spacing -->

    </div>

  </div>
