<div class="container">
  <div class="col-md-6 col-md-offset-3 vertical-center">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal col-lg-10'}) do |f| %>

    <h1>Log in</h1>
    <div class="control-group col-md-offset-4">
      <%= flash[:alert] %>
      <br><br>
    </div>
    <div class="control-group">
      <%= f.label :email, 'Email Id', class: "col-lg-4 control-label" %>
      <%= f.email_field :email, class: "form-control", autofocus: true %>
    </div>
    <br>
    <div class="control-group">
      <%= f.label :password, class: "col-lg-4 control-label" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
    <% if devise_mapping.rememberable? -%>

    <div>
      <%= f.check_box :remember_me%> <%= f.label :remember_me, class: "col-lg-4 control-label" %>
    </div>

    <% end -%>

    <div>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>

    <%= render "users/shared/links" %>
    <% end %>

  </div>
</div>
