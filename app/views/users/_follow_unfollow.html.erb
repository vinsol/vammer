<div class='followers'>
  <% if current_user.follow?(user) %>
    <%= link_to 'Unfollow', unfollow_user_path(user),{class: 'btn btn-danger unfollow', 'data-method' => 'Delete', 'data-remote' => true }%>
  <% else %>
    <%= link_to 'Follow', follow_user_path(user),{class: 'btn btn-success follow', 'data-method' => 'Post', 'data-remote' => true }%>
  <% end %>
</div>