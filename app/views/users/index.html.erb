<table class='table-width'>

  <tr>
    <th>Image</th>

  <table class='table table-striped table-hover table-bordered center-align'>
    <thead>

      <tr>
        <th id='name'>
          NAME
          <%= link_to_by_order :name %>

        </th>
        <th >
          EMAIL
          <%= link_to_by_order :email %>

        </th>

        <th>Joining Date</th>

      </tr>

  <% @users.each do |user| %>

    <tr class='row-height'>

      <td class='column-width'>
        <%= user.image ? image_tag(user.image.attachment.url) : 'no image' %>
      </td>

      <td class='column-width'> <%= user.name %> </td>

      <td class='column-width'> <%= user.email %> </td>

      <td class='column-width'> <%= user.joining_date %> </td>

      <td class='column-width'>
        <%= link_to 'show', user_path(user) %>
          <% if admin_or_self_user?(user) %>
          | <%= link_to 'edit', edit_user_path(user) %>
        <% end %>
      </td>

    </tr>

  <% end %>

</table>
<%= paginate @users %>
