<div class='col-md-6 col-md-offset-3'>

  <h2>Members</h2>

  <% if flash[:notice] %>
    <div class="col-lg-offset-4">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <table class='table table-striped table-hover table-bordered center-align'>
    <thead>

      <tr>
        <th id='name'>
          NAME
          <%= link_to_by_order 'Name' %>

        </th>
        <th >
          EMAIL
          <%= link_to_by_order 'Email' %>

        </th>

        <th>Joining Date</th>

        <th>Action</th>

      </tr>

    </thead>
    <tbody>

      <% @users.each do |user| %>

        <tr>
          <td>

            <%= user.name %>

          </td>
          <td>

            <%= user.email %>

          </td>
          <td>

            <%= user.joining_date.to_date %>

          </td>
          <td>

            <%= link_to 'show' %>
            <!-- #FIX: Move this condition to a helper method -->
            <% if admin_or_self_user %>
               | <%= link_to 'edit', edit_user_path(user) %>
            <% end %>

          </td>
        </tr>

      <% end %>

    </tbody>
  </table> 

  <%= paginate @users %>
</div>
