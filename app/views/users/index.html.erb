<div class='container'>
<% #FIXME_AB: What if there were no users -%>
  <% if @users %>
    <% @users.each do |user| %>

      <!-- #FIX: Make a partial for rendering card and use it inside loop -->
      <div class='row row-margin-bottom'>

        <div class='col-md-5 no-padding lib-item' data-category='view'>

          <div class='lib-panel'>
            <div class='row box-shadow'>
              <div class='col-md-4'>
                <%= user.image ? image_tag(user.large_thumbnail_url, class: 'lib-img') : missing_image_tag %>
              </div>

              <!-- #FIX: Make a partial for user details. Keep image in card partial only. -->
              <div class='col-md-6'>
                <div class='lib-row lib-header'>

                  <%= user.name %>

                  <div class='lib-header-seperator'></div>
                </div>

                <div class='lib-row lib-desc'>

                  <%= user.email %><br>
                  <%= user.joining_date.to_s(:long) %><br>
                  <%= link_to 'show', user_path(user) %><br><br>
                  <% if can_edit_user?(user) %>
                    <%= link_to 'edit', edit_user_path(user), class: 'col-md-offset-4' %>
                  <% end %>

                </div>

              </div>
            </div>
          </div>
        </div>

        <div class='col-md-1'></div>

      </div>

    <% end %>
    <% else %>
      No Users
  <% end %>

</div>
