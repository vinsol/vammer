<div class='col-md-6 col-md-offset-3'>

  <h2>Members</h2>

  <table class='table table-striped table-hover table-bordered center-align'>
    <thead>

      <tr>
        <th id='name'>

          <%= link_to_by_order 'Name', params,  'name' %>

        </th>
        <th >

          <%= link_to_by_order 'Email', params,  'email' %>

        </th>

        <th>Joining Date</th>

        <th>Action</th>

      </tr>

    </thead>
    <tbody>

      <% @users.each do |user| %>

        <tr>
          <td>

            <%= user.name %>

          </td>
          <td>

            <%= user.email %>

          </td>
          <td>

            <%= user.joining_date.to_date %>

          </td>
          <td>

            <%= link_to 'show', user_path(user) %>
            <% if admin_logged_in or user == current_user%>
               | <%= link_to 'edit', edit_user_path(user) %>
            <% end %>

          </td>
        </tr>

      <% end %>

    </tbody>
  </table> 

  <%= paginate @users %>

</div>