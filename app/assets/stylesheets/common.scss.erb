*{
	margin: 0;
	padding: 0;
	font-size: 14px;
	color: #666;
	font-family: arial;
}
.width-full{
	width:100%;
}
.ovr-hdn{
	overflow: hidden;
}
.clr-bth{
	clear: both;
}
.like {
	background: url("/assets/like.png") no-repeat scroll 0 0 transparent;
	display: inline-block;
	font-size: 0;
	height: 18px;
	opacity: 0.7;
	position: relative;
	top: -16px;
	width: 16px;
}
.unlike{
	background: url("/assets/like.png") no-repeat scroll 0 0 transparent;
	display: inline-block;
	font-size: 0;
	height: 18px;
	opacity: 0.7;
	position: relative;
	top: -12px;
	width: 16px;
	-ms-transform: rotate(180deg); /* IE 9 */
  -webkit-transform: rotate(180deg); /* Chrome, Safari, Opera */
	transform: rotate(180deg);
}
.view,
.edit{
  font-family: FontAwesome;
  color: #666;
  font-size: 16px !important;
}
.edit {
  float: right;
  margin: 2px 0 0;
}
ul{
	list-style: none;
	padding: 0;
	margin: 0;
}
a{
	text-decoration: none;
	transition:0.5s;
	-webkit-transition:0.5s;
}
a:hover{
	opacity: 0.8;
  color: #888;
}
.navigation-bar-new .nav a{
	font-weight: bold;
}

