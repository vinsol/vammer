/*--- header ---*/
header {
  background: linear-gradient(#8DB1EF, #3b5998);
  height: 54px;
}
 .search-user{
  .select2-container{
    width: 100%;
    .select2-choice{
      background: #fff;
      .select2-drop-active{
        background: #fff;
      }
    }
  }
 }
.user-container {
  display: table;
  table-layout: fixed;
  text-align: center;
  width:90%;
  .profile-image-container {
    border: 1px solid #ccc;
    display: table-cell;
    height: 100px;
    padding: 3px !important;
    vertical-align: middle;
    width:180px;
    img {
      max-height: 100%;
      max-width: 100%;
    }
  }
  label {
    color: #337ab7;
    line-height: 32px;
    a:hover{
      text-decoration:underline;
    }
  }
}
.navigation-bar-new{
  li{
    small{
      font-family: "FontAwesome";
      font-size: 18px;
      position: absolute;
      top: 10px;
      color: #337ab7;
    }
  }
  li.group{
    small{
      top: 13px;
      font-size: 15px;
    }
  }
  li.people{
    small{
      top: 13px;
      font-size: 15px;
    }
  }
  li.active{
    small{
      color: #666;
    }
  }
  li:hover{
    small{
      color: #666;
    }
  }
}
/*--- left sidebar ---*/
.followers {
  background: none repeat scroll 0 0 #f8f8f8;
  border: 1px solid #eee;
  li {
    border-top: 1px dashed #ccc;
    padding: 10px;
  }
  li:first-child{
    border-top:none;
  }
}
.more-link-color {
  background: none repeat scroll 0 0 #f6f6f6;
  border-radius: 5px;
  color: #666;
  margin: 10px 0 0;
  padding: 4px 13px !important;
}

/*--- nav tabs ---*/
.fields{
  position: relative;
  margin: 0 0 15px;
  input{
    cursor: pointer;
    opacity: 0;
    position: relative;
    width: 77px;
    z-index: 2;
  }
  .attachment-btn {
    background: none repeat scroll 0 0 #ff9900;
    border-radius: 5px;
    color: #fff;
    padding: 5px 15px;
    top: 0;
    z-index: 1;
  }
  .attachment-btn:hover{
    opacity:0.8;
  }
}
.add_nested_fields {
  color: #666;
  float: left;
  font-size: 12px;
  font-style: italic;
  width: 100%;
}
.post-submit-button{
  text-align: right;
  input {
    background: none repeat scroll 0 0 #219b48;
    border: medium none;
    border-radius: 5px;
    color: #fff;
    padding: 5px 10px;
    float: right;
  }
}
.post-submit-button {
  input:hover{
    opacity: 0.8;
  }
}
.comment-margin {
  .name-bold {
    font-size: 14px;
  }
}
.comment-block {
  background: none repeat scroll 0 0 #f9f9f9;
  border: 1px solid #eee;
  margin: 20px 0;
  .comment-box {
    border-bottom: 1px solid #ccc;
    border-top: 2px solid #fff;
  }
}
.group-sub {
  li {
    float: left;
    width: auto;
    a{
      color: #646464;
      font-size: 13px;
      padding: 10px 5px 5px;
    }
  }
}


















