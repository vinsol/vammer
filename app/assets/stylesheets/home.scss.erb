/*--- mixins ---*/
@mixin border-radius($radius) {
 -webkit-border-radius: $radius;
    -moz-border-radius: $radius;
     -ms-border-radius: $radius;
         border-radius: $radius;
}
.button{
  @include border-radius(5px);
  background: none repeat scroll 0 0 #219b48;
  border: medium none;
  color: #fff;
  float: right;
  padding: 5px 10px;
}
/*--- header ---*/
header {
  background: none repeat scroll 0 0 #7a9ddb;
  border-bottom: 1px solid #337ab7;
  height: 54px;
}
 .search-user{
  .select2-container{
    width: 100%;
    .select2-choice{
      background: #fff;
      .select2-drop-active{
        background: #fff;
      }
    }
  }
 }
.user-container {
  display: table;
  table-layout: fixed;
  text-align: center;
  width:90%;
  .profile-image-container {
    border: 1px solid #ccc;
    display: table-cell;
    height: 100px;
    padding: 3px !important;
    vertical-align: middle;
    width:180px;
    @media screen and (max-width: 700px){
      display: inline-block;
      width: 100%;
    }
    img {
      max-height: 100%;
      max-width: 100%;
    }
  }
  label {
    color: #337ab7;
    line-height: 32px;
    a:hover{
      text-decoration:underline;
    }
  }
}
.navigation-bar-new{
  li{
    small{
      color: #337ab7;
      font-family: "FontAwesome";
      font-size: 18px;
      position: absolute;
      top: 10px;
    }
  }
  li.group{
    small{
      font-size: 15px;
      top: 13px;
    }
  }
  li.people{
    small{
      font-size: 15px;
      top: 13px;
    }
  }
  li.active{
    small{
      color: #666;
    }
  }
  li:hover{
    small{
      color: #666;
    }
  }
}
/*--- left sidebar ---*/
.followers {
  background: none repeat scroll 0 0 #f8f8f8;
  border: 1px solid #eee;
  li {
    border-top: 1px dashed #ccc;
    padding: 10px;
  }
  li:first-child{
    border-top:none;
  }
}
.more-link-color {
  background: none repeat scroll 0 0 #f6f6f6;
  border-radius: 5px;
  color: #666;
  margin: 10px 0 0;
  padding: 4px 13px !important;
}

/*--- nav tabs ---*/
.fields{
  margin: 0 0 15px;
  position: relative;
  input{
    cursor: pointer;
    opacity: 0;
    position: relative;
    width: 77px;
    z-index: 2;
  }
  .attachment-btn {
    background: none repeat scroll 0 0 #ff9900;
    top: 0;
    z-index: 1;
    @extend .button
  }
  .attachment-btn:hover{
    opacity:0.8;
  }
}
.add_nested_fields {
  color: #666;
  float: left;
  font-size: 12px;
  font-style: italic;
  width: 100%;
}
.post-submit-button{
  text-align: right;
  input {
    @extend .button
  }
}
.post-submit-button {
  input:hover{
    opacity: 0.8;
  }
}
.comment-margin {
  .name-bold {
    font-size: 14px;
    margin: 0 0 0 10px;
  }
}
.comment-block {
  background: none repeat scroll 0 0 #f9f9f9;
  border: 1px solid #eee;
  margin: 20px 0;
  .comment-box {
    border-bottom: 1px solid #ccc;
    border-top: 2px solid #fff;
  }
}
.group-sub {
  background: none repeat scroll 0 0 #fcf8e3;
  border: 2px solid #fbeed5;
  li {
    display: inline-block;
    margin: 0;
    text-align: center;
    width: 32.9%;
    a{
      color: #c09853;
      font-size: 13px;
      font-weight: normal !important;
      padding: 10px 5px 5px;
    }
  }
  li.active{
    a{
      background:#F7ECB7;
      font-weight: bold !important;
    }
  }
}
.group-block{
  .table-striped {
    border:solid 1px #fbeed5;
    tr:nth-of-type(2n+1) {
      background:#fcfaef;
    }
    th,
    td{
      border-color:#fbeed5;
    }
    tr:hover{
      background:#fcfaef;
    }
  }
}
.group-people{
  background: #fcfaef;
}
.list-inline{
  border-left: 2px solid #fbeed5;
  border-right: 2px solid #fbeed5;
  color: #c09853;
  padding: 5px 0 0;
  li{
    padding-left: 4px;
    padding-right: 4px;
    a{
      color: #c09853;
      font-size: 11px;
    }
  }
}
.user-block {
  background: none repeat scroll 0 0 #fcfbf7;
  border: 1px solid #fbeed5;
  float: left;
  width: 100%;
}

/*--- group details---*/
.group-detail {
  background: none repeat scroll 0 0 #fff3e2;
  border: 2px solid #fbbf6a;
  @include border-radius(5px);
  h2{
    color: #FBB450;
    font-size: 22px;
    font-weight: bold;
    margin: 0 0 10px;
  }
}
.user-data{
  font-size: 13px;
  width: 80%;
}
.container-bottom{
  border-top: 1px solid #fbeed5;
}
.follow-user {
  float: right;
  width: auto;
  @media screen and (max-width: 700px){
    clear:both;
  }
}
.user-hed{
  color: #5a5a5a;
  font-size: 25px;
  line-height: 35px;
}
.edit-det-inr{
  background: #FCFBF7;
  border: 1px solid #fbeed5;
  @include border-radius(5px);
  h2{
    color: #545454;
    font-size: 22px;
    margin-left: -10px;
    text-transform: capitalize;
  }
  label{
    color: #c09853;
    padding-bottom: 5px;
  }
  .form-control,
  #user_about_me{
    border-color: #c09853;
  }
}
.edit-details{
  .side-options{
    width: 100%;
    float: left;
    a{
      color: #F89406;
      float: right;
      margin: 0 0 0 20px;
    }
  }
}
.edit-details{
  width: 100%;
}
.chng-pwd{
  h2{
    margin-left: 0;
  }
}
.user-posts {
  position: relative;
  width:65%;
  @media screen and (max-width: 700px){
    width:100%;
  }
}
@media screen and (max-width: 700px){
  .edit-details{
    width: 100%;
  }
  .mob-bot-margin{
    margin-bottom:20px;
  }
}
#edit_setting_1 {
  .form-control{
    background: #fff;
  }
  label{
    width: 100%;
  }
  input[type="submit"]{
    float: left;
  }
}
.small-btm{
  a {
    color: #666;
    font-size: 12px;
    font-style: italic;
  }
  a:hover{
    color: #ff9900;
  }
}
.list-group-item.mainactive {
  background:#337ab7 !important;
  color: #fff !important;
}